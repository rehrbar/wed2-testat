<h1>{{title}}</h1>
<section class="navigation" >
    <a class="button" href="/notes/new" >Create new note</a>

{{#if-eq theme "dark"}}
    <a class="button" href="{{filter-url ../orderby ../finished}}&theme=default">Switch style</a>
{{else}}
    <a class="button" href="{{filter-url ../orderby ../finished}}&theme=dark">Switch style</a>
{{/if-eq}}
</section>
<section class="filters">
    {{#if-eq orderBy "dueDate"}}
        <a class="button" href="{{filter-url 'dueDate_desc' ../finished}}">By due date</a>
    {{else}}
        <a class="button" href="{{filter-url 'dueDate' ../finished}}">By due date</a>
    {{/if-eq}}

    {{#if-eq orderBy "createDate"}}
        <a class="button" href="{{filter-url 'createDate_desc' ../finished}}">By create date</a>
    {{else}}
        <a class="button" href="{{filter-url 'createDate' ../finished}}">By create date</a>
    {{/if-eq}}
    {{#if-eq orderBy "importance"}}
        <a class="button" href="{{filter-url 'importance_desc' ../finished}}">By importance</a>
    {{else}}
        <a class="button" href="{{filter-url 'importance' ../finished}}">By importance</a>
    {{/if-eq}}

    {{#if finished}}
        <a class="button last" href="{{filter-url orderBy 'false'}}">Hide finished</a>
    {{else}}
        <a class="button last" href="{{filter-url orderBy 'true'}}">Show finished</a>
    {{/if}}
</section>
<section class="notes">
    <!-- TODO replace with real interface; this is just for testing sorting/filters -->
    {{#each notes}}
        <div class="note">
            <div class="note-content">
                <div class="duedate"><span><time datetime="{{dueDate}}">{{#moment d "to" dueDate }}{{dueDate}}{{/moment}}</time></span></div>
                <div class="title"><span>{{title}}</span></div>
                <div class="importance"><span>{{#times importance}}&#9733;{{/times}}</span></div>
                <div class="linebreak"></div>
                <div class="finished">
                    <input name="cbxFinished" type="checkbox" disabled {{#if finished}}checked="checked"{{/if}}">
                    <label for="cbxFinished" >Finished</label>
                </div>
                <div class="description"><textarea name="taDescription" disabled>{{description}}</textarea></div>
            </div>
            <div class="edit"> <a class="button" href="/notes/{{_id}}">Edit</a></div>
        </div>
    {{/each}}
</section>